<Window x:Class="FPSResultsAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <ListBox x:Name="listboxGameResults" Grid.Row="0" Grid.Column="1" BorderThickness="1" 
     ItemsSource="{Binding }">
        </ListBox>
        <Button Grid.Column="1" Content="Edit match" Click="EditMatchButton_Click" Width="100" Margin="122,312,223,0" Grid.RowSpan="2" />
        <Button Content="Add match" Click="AddMatchButton_Click" Width="100" Margin="0,312,345,0" Grid.RowSpan="2" Grid.Column="1" />
        <Button Content="Remove match" Click="RemoveMatchButton_Click" Width="100" Margin="230,312,115,0" Grid.RowSpan="2" Grid.Column="1" />
        <Button Grid.Column="1" Content="Save .csv file" Click="SaveCSVButton_Click" Width="100" Margin="345,312,0,0" Grid.RowSpan="2" />

        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="156*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
