<Window x:Class="FPSResultsAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <ListBox x:Name="listboxGameResults" Grid.Row="0" Grid.Column="1" BorderThickness="1" 
     ItemsSource="{Binding }">
        </ListBox>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Content="Add match" Click="AddMatchButton_Click" Width="146" />
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Content="Save .csv file" Click="SaveCSVButton_Click" Width="146" />

        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="156*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
